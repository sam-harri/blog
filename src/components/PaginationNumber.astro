---
import { SITE, BASE } from "../config";

const { index, active, tag } = Astro.props;
---

<a
  href={tag ? SITE + BASE + "tags/" + tag + "/" + index : SITE + BASE + "pages/" + index}
      class:list={[
      "inline-flex items-center border-t-2 px-4 pt-4 text-sm font-medium",
      active
        ? "border-[var(--fg)] text-[var(--fg)]"
        : "border-transparent text-[var(--fg)]/70 hover:border-[var(--fg)]/30 hover:text-[var(--fg)]",
    ]}>{index}</a
>
