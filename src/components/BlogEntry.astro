---
import { SITE, BASE, SHOW_IMAGES } from "../config";
import FormattedDate from "./FormattedDate.astro";
import Tag from "./Tag.astro";
import HeroImage from "./HeroImage.astro";

const { title, description, pubDate, slug, heroImage, tags, noImage } =
  Astro.props;
---

<article class="relative isolate flex flex-col gap-8 md:flex-row md:items-center group">
  {
    noImage || !SHOW_IMAGES || !heroImage ? null : (
      <div class="md:w-64 md:shrink-0">
        <div class="relative w-full aspect-[1.91/1]">
          <HeroImage
            image={heroImage}
            class="absolute inset-0 h-full w-full object-contain rounded-xl"
          />
        </div>
      </div>
    )
  }

  <div>
    <div class="flex items-center gap-x-4 text-xs">
      <time datetime={pubDate} class="text-[var(--fg)]/70 shrink-0">
        <FormattedDate date={pubDate} />
      </time>
      <div class="flex gap-2 flex-wrap">
        {tags?.map((tag: string) => <Tag {tag} />)}
      </div>
    </div>

    <div class="max-w-xl">
      <div class="mt-3 text-lg font-semibold leading-6 text-[var(--fg)]">
        <a href={SITE + BASE + `posts/${slug}/`}>
          <span class="absolute inset-0"></span>
          {title}
        </a>
        <div class="absolute -inset-2 md:-inset-4 rounded-2xl opacity-0 group-hover:opacity-100 scale-95 group-hover:scale-100 bg-[var(--fg)]/10 -z-10 transition-all duration-150"></div>
      </div>

      <p class="mt-5 text-sm leading-6 text-[var(--fg)]/70">
        {description}
      </p>
    </div>
  </div>
</article>


